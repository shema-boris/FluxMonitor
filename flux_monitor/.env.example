 # Postgres (used by docker-compose postgres service)
 POSTGRES_DB=fluxmonitor
 POSTGRES_USER=fluxmonitor
 POSTGRES_PASSWORD=fluxmonitor
 POSTGRES_HOST=postgres
 POSTGRES_PORT=5432

 # SQLAlchemy async database URL (API + worker)
 DATABASE_URL=postgresql+asyncpg://fluxmonitor:fluxmonitor@postgres:5432/fluxmonitor

 # Redis (Celery broker/backend)
 REDIS_URL=redis://redis:6379/0

 # Optional overrides
 CELERY_BROKER_URL=
 CELERY_RESULT_BACKEND=
